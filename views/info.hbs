<div class="info">
    <div class="form-update">
        <h1>Update Your Info</h1>

        <form action="/doctor/update" method="POST" autocomplete="off">
            <div>
                <input type="text" autocomplete="off" class="input-field" name="userName" placeholder="User Name" required>
            </div>
            <div>
                <input type="text" autocomplete="off" class="input-field" name="doctorName" placeholder="Doctor Name" required>
            </div>
            <div>
                <input type="email" autocomplete="off" class="input-field" name="userEmail" placeholder="Doctor Email" required>
            </div>
            <div>
                <input type="text" autocomplete="off" class="input-field" name="userPhone" placeholder="Doctor Phone" required>
            </div>
            <div>
                <input type="text" autocomplete="off" class="input-field" name="userMajor" placeholder="Doctor Major" required>
            </div>
            <div>
                <input type="submit" autocomplete="off" value="Add Doctor &#10095;" class="btn">
            </div>
        </form>
    </div>
</div>